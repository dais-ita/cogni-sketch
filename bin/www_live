/**
 * @file The file to execute to start the production version of this application.
 *
 * The port used to serve the application comes from the 'live' property in settings.js
 *
 * @author Dave Braines
 **/
const server = require('./run_server');
const settings = require('../settings');

/** Start the live production server */
server.start(settings.ports.live);
