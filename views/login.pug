    meta(charset="utf-8")

    head
        title=title

        link(rel="icon" href="images/cs/favicon_light.png" type="image/png")

        link(href="/scripts/bootstrap/css/bootstrap.css", rel="stylesheet")
        link(href="/stylesheets/login.css" rel="stylesheet")

        script(src="/jquery/jquery.js")
        script(src="/scripts/bootstrap/js/bootstrap.js")

        meta(name="theme-color" content="#563d7c")

    body.text-center
        .container-fluid
            .row
                .col-sm-3
                .col-sm-6
                    img.mb-4(src="./images/cs/favicon_dark.png", alt="Cogni-sketch", width="144", height="144")
                    h1.h3.mb-3.font-weight-normal Please sign in to Cogni-sketch
                    p.alert-danger #{message}
                    form.form-sign-in(action="/login", method="post")
                        label.sr-only(for="inputUsername") User name
                        input#inputUsername.form-control(type="text", name="username", placeholder="Your username", required, autofocus)
                        label.sr-only(for="inputPassword") Password
                        input#inputPassword.form-control(type="password", name="password", placeholder="Your password", required)
                        .checkbox.mb-3
                            label
                                input#rememberMe(type="checkbox", value="remember-me")
                                | &nbsp;Remember me
                        button.btn.btn-lg.btn-primary.btn-blobk(type="submit") Sign in
                    p.alert-danger Alpha version - Please use Google Chrome only
                    p.text-muted c/o #{''}
                        a(href="https://en.wikipedia.org/wiki/DAIS-ITA") DAIS ITA
                        | #{''} 2021
                .col-sm-3
